<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen de la habitación -->
        <ImageView
            android:id="@+id/imagenDetalleHabitacion"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <!-- Nombre y descripción -->
        <TextView
            android:id="@+id/nombreDetalleHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Habitación"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/descripcionDetalleHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción de la habitación"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="10dp" />

        <!-- Sección Detalles -->
        <TextView
            android:text="Detalles"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/capacidadHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacidad: 3 personas" />

        <TextView
            android:id="@+id/ubicacionHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación: Piso 2, con ventana a la calle" />

        <TextView
            android:id="@+id/incluyeHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incluye: Baño privado, desayuno, SmartTV con Netflix" />

        <TextView
            android:id="@+id/costoHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Costo: 100.00 S/" />




        <!-- Lista de reservas -->
        <TextView
            android:id="@+id/textoReservas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/listaReservas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay reservas"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:paddingBottom="10dp" />

        <!-- Selección de Fechas -->


        <EditText
            android:id="@+id/fechaInicioReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de inicio"
            android:focusable="false"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"/>

        <EditText
            android:id="@+id/fechaFinReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de fin"
            android:focusable="false"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"/>


        <!-- Botón de reserva -->
        <Button
            android:id="@+id/botonReservar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservar"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
